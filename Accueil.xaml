            <StackPanel Orientation="Vertical"
                        Canvas.Top="76"
                        Height="203.833"
                        Width="141">

                <Button  Content="Ajouter patient"
                         Width="140"
                         Height="25"
                         FontSize="13.333"
                         FontFamily="Roboto" 
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}"  
                         Foreground="#FFD4574B" 
                         Click="Button_Click_5"
                         Margin="0,0,1,0"/>

                <Button  Content="Ajouter médecin"
                         Width="140"
                         Height="25"
                         FontSize="13.333"
                         FontFamily="Roboto" 
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}"  
                         Foreground="#FFD4574B" 
                         Margin="0,0,1,0"
                         Click="Button_Click_6"/>

                <Button  Content="Rechercher"
                         Width="140"
                         Height="25" 
                         FontSize="13.333"
                         FontFamily="Roboto" 
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}" 
                         Foreground="#FFD4574B" 
                         Click="Button_Click_2"/>

                <Button  Content="Profil"
                         Width="140" 
                         Height="25" 
                         FontSize="13.333"
                         FontFamily="Roboto"
                         Background="{x:Null}"
                         BorderBrush="{x:Null}" 
                         Click="Button_Click_1" 
                         Foreground="#FFD4574B" 
                         Margin="0,0,1,0" />

                <Button  Content="Statistiques"
                         Width="140" 
                         Height="25" 
                         FontSize="13.333" 
                         FontFamily="Roboto" 
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}" 
                         Foreground="#FFD4574B" 
                         Click="Button_Click_3"/>

                <Button  Content="Se deconnecter"
                         Width="140"
                         Height="25"
                         FontSize="13.333"
                         FontFamily="Roboto"
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}" 
                         Click="Button_Click" 
                         Foreground="#FFD4574B"/>

                <Button  Content="Quitter"
                         Width="140"
                         Height="25" 
                         FontSize="13.333"
                         FontFamily="Roboto" 
                         Background="{x:Null}" 
                         BorderBrush="{x:Null}"  
                         Foreground="#FFD4574B" 
                         Click="Button_Click_4"/>
            </StackPanel>
        </Canvas>

        <Rectangle x:Name="rect_contenu"
                   Stroke="#FFD4574B" 
                   RadiusY="10" 
                   RadiusX="10"
                   Margin="219,192.333,96.4,180.167" 
                   Fill="White" 
                   Opacity="0.7"/>
        <Image x:Name="img_Logo"
               Source="logoHillth.png"
               OpacityMask="#FF1A6A91" 
               Margin="0,148,-99,167"
               HorizontalAlignment="Right" 
               Width="451.953"/>

        <ToggleButton x:Name="toggle_Menu"
                      Content="ToggleButton" 
                      HorizontalAlignment="Left" 
                      Margin="29.333,90.272,0,0"
                      VerticalAlignment="Top" 
                      RenderTransformOrigin="0.333,-0.323" 
                      Height="59.728" 
                      Width="55.667" 
                      Checked="toggle_Menu_Checked" 
                      Unchecked="toggle_Menu_Unchecked" 
                      Background="{x:Null}" 
                      IsChecked="True"/>

