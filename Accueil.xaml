        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialMenu="clr-namespace:MaterialMenu;assembly=MaterialMenu"
        xmlns:local="clr-namespace:premierTest"
        xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" x:Class="premierTest.Accueil"
        mc:Ignorable="d"
        Title="Hillth" Height="700" Width="900"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,30"
          HorizontalAlignment="Right">
        <Image x:Name="background"
               Source="background2.png"
               Margin="-135.759,148,-99,-192"/>

        <Rectangle x:Name="rect_logo"
                   Fill="#FFBFDAD9"
                   Height="154.5"
                   VerticalAlignment="Top"
                   Margin="0,0,-3.667,0"/>

        <Image x:Name="image"
               Height="150"
               VerticalAlignment="Top"
               Source="banniere.png"
               Margin="0,0,10,0"/>

        <Canvas x:Name="Can_MenuLat"
                HorizontalAlignment="Left"
                Margin="0,232.55,0,325.117"
                Width="141">

            <Rectangle x:Name="rect_lab"
                       Height="34.5"
                       Canvas.Left="-15"
                       StrokeThickness="1"
                       Width="156"
                       RadiusX="10"
                       RadiusY="10"
                       Canvas.Top="36.5">

                <Rectangle.Effect>
                    <BlurEffect KernelType="Box" Radius="3"/>
                </Rectangle.Effect>
            </Rectangle>
            <Rectangle x:Name="rect_menu"
                       RadiusY="10"
                       RadiusX="10"
                       StrokeThickness="1"
                       Width="154.667"
                       Height="208.333" 
                       Canvas.Left="-15"
                       Canvas.Top="71.5">
                <Rectangle.Effect>
                    <BlurEffect KernelType="Box" Radius="3"/>
                </Rectangle.Effect>
            </Rectangle>

            <Label x:Name="label"
                   Content="Menu"
                   Canvas.Top="36.5"
                   Width="59.493"
                   Height="30" 
                   Foreground="#FFD4574B" 
                   FontFamily="Roboto"
                   FontSize="20" 
                   HorizontalAlignment="Left"
                   Canvas.Left="41.333"
