            <TextBlock x:Name="txt_NumINAMI"
                       Text ="" 
                       FontSize="26.667"
                       FontFamily="Roboto" 
                       Height="50"  
                       Foreground="#FFD4574B" 
                       Canvas.Left="14" 
                       Canvas.Top="158" 
                       Width="448"/>

            <TextBlock x:Name="txt_NumTel"
                       Text ="" 
                       FontSize="26.667"
                       FontFamily="Roboto"  
                       Foreground="#FFD4574B" 
                       Height="50" 
                       Canvas.Left="14" 
                       Canvas.Top="103" 
                       Width="448"/>

            <TextBlock x:Name="txt_Spec"
                       Text ="" 
                       FontSize="26.667" 
                       FontFamily="Roboto" 
                       Height="35" 
                       Width="448"  
                       Foreground="#FFD4574B"
                       Canvas.Top="55"
                       Canvas.Left="14"/>

            <TextBlock x:Name="txt_Adr"
                       Text ="" 
                       FontSize="26.667" 
                       FontFamily="Roboto" 
                       Height="39"  
                       Foreground="#FFD4574B" 
                       Canvas.Left="14" 
                       Canvas.Top="208" 
                       Width="520"/>
