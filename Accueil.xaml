                       FontSize="26.667"
                       FontFamily="Roboto" 
                       Height="50" 
                       Width="448"  
                       Foreground="#FFD4574B" 
                       Canvas.Left="14" 
                       Canvas.Top="8">
                <InlineUIContainer>
            	</InlineUIContainer>
