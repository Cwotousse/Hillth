                    Width="117" 
                    Background="#FFD4574B" 
                    BorderBrush="#FFD4574B" 
                    Click="btn_rech_Click" 
                    RenderTransformOrigin="0.558,-0.283"/>
            <Button x:Name="btn_cancel"
                    Content="Reset" 
                    Canvas.Left="384" 
                    Canvas.Top="156" 
                    Width="117" 
                    Background="#FFD4574B" 
                    BorderBrush="#FFD4574B" 
