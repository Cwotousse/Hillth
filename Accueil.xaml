                   Content="Rechercher les patients par : " 
                   FontFamily="Roboto" 
                   FontSize="20" 
                   Foreground="#FFD4574B" 
                   FontWeight="Bold" 
                   Width="280.793"/>

            <TextBlock x:Name="chk_Nom"
                       Width="100" 
                       Background="#FFECF4F4" 
                       Foreground="#FFD4574B" 
                       FontFamily="Muli" 
                       FontSize="20" 
                       Height="32" 
                       Canvas.Top="45" 
                       Text="Nom" />

            <TextBlock x:Name="chk_Pre"
                       Text="Prenom" 
                       Background="#FFECF4F4"  
                       Foreground="#FFD4574B" 
