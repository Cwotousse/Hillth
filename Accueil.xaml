                         TextWrapping="Wrap" 
                         Canvas.Top="64" 
                         Width="139" 
                         SelectionBrush="#FFFF6501" 
                         Foreground="#FFD4574B" 
                         FontFamily="Muli" 
                         FontSize="16" 
                         Canvas.Left="0.427"/>

                <ComboBox x:Name="ComboB_Mut" 
                          VerticalAlignment="Stretch" 
                          Canvas.Top="104"
                          Width="139" 
