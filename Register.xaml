        <Image x:Name="image" HorizontalAlignment="Left" Margin="419,0,-89,256" Width="360" Source="logoHillth.png" Height="257" VerticalAlignment="Bottom"/>
        <Label x:Name="lab_mdpUser"       Content="Mot de passe"                       FontSize="26.667" FontFamily="Muli" Height="50" Canvas.Left="2" Canvas.Top="234.982"  Foreground="#FFD4574B" Margin="42,260,467,230"/>
