        xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="premierTest.Register"
        mc:Ignorable="d"
        Title="Register"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen" 
