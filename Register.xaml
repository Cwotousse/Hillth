        <Button x:Name="btn_precUser"     Height="50"  Content="Retour" Click="btn_prec_Click_1" Canvas.Left="2" Canvas.Top="454.136" Margin="42,447,348,43" />
        <Button x:Name="btn_submitUser"   Height="50"  Content="Enregistrement"     Canvas.Left="327" Canvas.Top="454.136" Click="btn_submitUser_Click" Margin="354,447,36,43" />
    </Grid>
</Window>
